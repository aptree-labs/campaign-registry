{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "type": "object",
    "definitions": {
        "queryFilter": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "eq": {},
                "neq": {}, 
                "gt": {
                    "type": "number"
                },
                "lt": {
                    "type": "number"
                },
                "in": {
                    "type": "array"
                },
                "and": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "or": {
                    "type": "array", 
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "not": {
                    "$ref": "#/definitions/queryFilter"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "title":{
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "start_at": {
            "type": "number"
        },
        "end_at": {
            "type": "number"
        },
        "status": {
            "type":  "string",
            "enum": [
                "active",
                "inactive",
                "completed"
            ]
        },
        "platform": {
            "type": "string"
        },
        "entry_function": {
            "type": "string"
        },
        "events": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "check_eligibility": {
                        "$ref": "#/definitions/queryFilter"
                    }
                    
                },
                "required": ["name"]
            }
        },
        "rewards": {
            "type": "object",
            "properties": {
                "droplets": {
                    "type": "number"
                }
            },
            "required": ["droplets"]
        },
        "reffaral_link": {
            "type": "string"
        },
        "network": {
            "type": "string",
            "enum": ["testnet", "mainnet"]
        },
        "elligibility": {
            "type": "object",
            "properties": {
                "interactions": {
                    "type": "integer",
                    "description": "Number of interactions required for elligibility"
                }
            }
        },
        "category": {
            "type": "string",
            "enum": [
                "swap",
                "liquidity"
            ]
        }
        
    },
    "required": [
        "id",
        "title",
        "description",
        "start_at",
        "end_at",
        "status",
        "platform",
        "events",
        "rewards",
        "reffaral_link",
        "entry_function",
        "elligibility"
    ]
}