{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "type": "object",
    "definitions": {
        "queryFilter": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "eq": {},
                "neq": {}, 
                "gt": {
                    "type": "number"
                },
                "lt": {
                    "type": "number"
                },
                "in": {
                    "type": "array"
                },
                "and": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "or": {
                    "type": "array", 
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "not": {
                    "$ref": "#/definitions/queryFilter"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "title":{
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "start_at": {
            "type": "number"
        },
        "end_at": {
            "type": "number"
        },
        "status": {
            "type":  "string",
            "enum": [
                "active",
                "inactive",
                "completed"
            ]
        },
        "platform": {
            "type": "string"
        },
        "entry_function": {
            "type": "string"
        },
        "events": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "rewards": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {"type": "string"},
                                "check_eligibility": {
                                    "$ref": "#/definitions/queryFilter"
                                },
                                "droplets": {
                                    "type": "number"
                                },
                                "max_rewards": {
                                    "type": "number",
                                    "description": "The max number of times the user can be rewarded for this campaign having met the reward criteria"
                                }
                            }
                        }
                    }
                },
                "required": ["name", "rewards"]
            }
        },
        "reffaral_link": {
            "type": "string"
        },
        "network": {
            "type": "string",
            "enum": ["testnet", "mainnet"]
        },
        "category": {
            "type": "string",
            "enum": [
                "swap",
                "liquidity"
            ]
        }
        
    },
    "required": [
        "id",
        "title",
        "description",
        "start_at",
        "end_at",
        "status",
        "platform",
        "events",
        "reffaral_link",
        "entry_function"
    ]
}