{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "type": "object",
    "definitions": {
        "queryFilter": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string"
                },
                "eq": {},
                "neq": {}, 
                "gt": {
                    "type": "number"
                },
                "lt": {
                    "type": "number"
                },
                "in": {
                    "type": "array"
                },
                "and": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "or": {
                    "type": "array", 
                    "items": {
                        "$ref": "#/definitions/queryFilter"
                    }
                },
                "not": {
                    "$ref": "#/definitions/queryFilter"
                }
            },
            "additionalProperties": false
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "title":{
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "start_at": {
            "type": "number"
        },
        "end_at": {
            "type": "number"
        },
        "status": {
            "type":  "string",
            "enum": [
                "active",
                "inactive",
                "completed"
            ]
        },
        "platform": {
            "type": "string"
        },
        "functions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "entry_function": { 
                        "type": "string"
                    },
                    "is_script": {
                        "type": "boolean"
                    },
                    "events": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "rewards": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {"type": "string"},
                                            "check_eligibility": {
                                                "$ref": "#/definitions/queryFilter"
                                            },
                                            "droplets": {
                                                "type": "number"
                                            },
                                            "max_rewards": {
                                                "type": "number",
                                                "description": "The max number of times the user can be rewarded for this campaign having met the reward criteria"
                                            }
                                        }
                                    }
                                }
                            },
                            "required": ["name", "rewards"]
                        }
                    },
                    "name": {"type": "string"},
                    "description": {"type": "string"},
                    "is_duplicate": {"type": "boolean"},
                    "link": {"type": "string"}
                }
            }
        },
        "referral_link": {
            "type": "string"
        },
        "network": {
            "type": "string",
            "enum": ["testnet", "mainnet"]
        },
        "category": {
            "type": "string",
            "enum": [
                "swap",
                "liquidity"
            ]
        },
        "filters": {
            "type": "array",
            "description": "A way to simplify categorisation to easily configure how campaigns will be filtered by end users",
            "items": {
                "type": "string"
            }
        },
        "action_tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "id",
        "title",
        "description",
        "start_at",
        "end_at",
        "status",
        "platform",
        "referral_link",
        "functions",
        "action_tags"
    ]
}