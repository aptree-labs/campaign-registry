{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "type": "object",
    "properties": {
        "id": {
            "type": "string"
        },
        "title":{
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "start_at": {
            "type": "number"
        },
        "end_at": {
            "type": "number"
        },
        "status": {
            "type":  "string",
            "enum": [
                "active",
                "inactive",
                "completed"
            ]
        },
        "platform": {
            "type": "string"
        },
        "events": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "elligibility": {
                        "type": "object",
                        "properties": {
                            "interactions": {
                                "type": "integer",
                                "description": "Number of interactions required for elligibility"
                            },
                            "min_amount": {
                                "type": "number",
                                "description": "Min amount for a trade"
                            },
                            "token": {
                                "type": "string",
                                "description": "Optional token in event"
                            }
                        }
                    }
                    
                },
                "required": ["name"]
            }
        },
        "rewards": {
            "type": "object",
            "properties": {
                "droplets": {
                    "type": "number"
                }
            },
            "required": ["droplets"]
        },
        "reffaral_link": {
            "type": "string"
        },
        "network": {
            "type": "string",
            "enum": ["testnet", "mainnet"]
        }
        
    },
    "required": [
        "id",
        "title",
        "description",
        "start_at",
        "end_at",
        "status",
        "platform",
        "events",
        "reward",
        "reffaral_link"
    ]
}